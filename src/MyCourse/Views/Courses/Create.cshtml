@model CourseCreateInputModel
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="row">
        <div class="col-12">
            <!--
            Questa view dimostra l'uso sia dell'asp-validation-summary che dell'asp-validation-for
            Perciò gli errori di validazione verranno visualizzati due volte
            -->
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mb-3">
            <input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Digita un titolo che attiri gli studenti...">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="fas fa-rocket"></i> Crea corso!</button>
        </div>
    </div>
</form>
